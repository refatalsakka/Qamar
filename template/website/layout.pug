//- imgs folder
- var imgs        = _public + 'imgs/'
- var logos       = imgs    + 'logos/'
- var websiteImgs = imgs    + 'website/'

//- uploads folders
- var uploads     = _public + 'uploads/'

//- css folder
- var css         = _public + 'css/'
- var cssWebsite  = css     + 'website/'
- var cssLibs     = css     + 'libs/'

//- js folder
- var js          = _public + 'js/'
- var jsWebsite   = js      + 'website/'
- var jsLibs      = js      + 'libs/'

block varibles

<!DOCTYPE html>
html(lang=lang)
  head
    include partials/head.pug
    link(href=cssWebsite + page + '.css', rel='stylesheet')
    block styles
  body
    block view
    include partials/footer.pug
    script(src=jsWebsite + page + '.js')
    block scripts
